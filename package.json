{
  "name": "pdf-encryption",
  "description": "PDF Encryption App",
  "version": "0.1.0",
  "private": true,
  "repository": "https://github.com/PrivacyMattersEU/pdf-ecrypt-app",
  "author": {
    "name": "ByteSchneiderei GmbH",
    "url": "https://privacy-matters.eu"
  },

  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "test": "echo success",
    "react-start": "rescripts start",
    "react-build": "rescripts build",
    "react-test": "rescripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "build",
    "rebuild": "$(npm bin)/electron-rebuild"
  },
  "build": {
    "appId": "eu.privacy-matters.pdf-encryption",
    "productName": "PDF Encryption",
    "copyright": "Copyright Â© 2019 ${author}",
    "publish": "github",
    "appImage": {
      "license": "LICENSE"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "license": "LICENSE"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "hummus-recipe": "^1.8.19",
    "nedb": "^1.8.0",
    "qrcode.react": "^0.9.3",
    "react": "^16.8.3",
    "react-awesome-button": "^6.1.2",
    "react-dom": "^16.8.3",
    "react-lottie": "^1.2.3",
    "react-scripts": "2.1.5"
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.10",
    "@rescripts/rescript-env": "^0.0.5",
    "concurrently": "^4.1.0",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "typescript": "^3.3.3333",
    "wait-on": "^3.2.0"
  }
}
